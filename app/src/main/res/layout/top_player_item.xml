<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:backgroundTint="@color/dorado2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@color/gris2">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/top_player_item_icon_frame"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:background="@color/azul_victoria"
            app:layout_constraintBottom_toBottomOf="@+id/top_player_item_icon"
            app:layout_constraintEnd_toEndOf="@+id/top_player_item_icon"
            app:layout_constraintStart_toStartOf="@+id/top_player_item_icon"
            app:layout_constraintTop_toTopOf="@+id/top_player_item_icon"

            app:shapeAppearanceOverlay="@style/rounded_rectangle_icon_shape"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/top_player_item_icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/dorado2"
            android:layout_marginTop="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1"

            app:shapeAppearanceOverlay="@style/rounded_rectangle_icon_shape"/>

        <TextView
            android:id="@+id/top_player_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mulish_bold"
            android:gravity="center"
            android:text="Summoner Name"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_player_item_challenger"
            app:layout_constraintVertical_bias="0.1" />

        <ImageView
            android:id="@+id/top_player_item_challenger"
            android:layout_width="128dp"
            android:layout_height="96dp"
            android:background="@drawable/challenger_emblem"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/top_player_item_icon"
            app:layout_constraintVertical_bias="0.4" />

        <TextView
            android:id="@+id/top_player_item_level"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:background="@drawable/hexagon_shape"
            android:backgroundTint="@color/azul_victoria"
            android:fontFamily="@font/mulish_bold"
            android:gravity="center"
            android:text="000"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.14"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>